{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ],
    "paths": {
      "&front/*": ["./src/*"],
      "&shared/*": ["./shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "shared/**/*",
    "./types.d.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
